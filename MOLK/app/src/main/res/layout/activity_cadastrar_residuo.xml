<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastrarResiduoActivity">

    <!-- ScrollView com imagem de fundo e conteúdo -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagem de fundo com altura fixa -->
            <ImageView
                android:id="@+id/imageViewFundo"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagem de fundo"
                app:srcCompat="@drawable/background_login_3" />

            <!-- Conteúdo do formulário -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Espaçador opcional -->

                <View
                    android:layout_width="29dp"
                    android:layout_height="339dp" />

                <EditText
                    android:id="@+id/nomeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Nome"
                    android:textColorHint="#1F775A"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Email"
                    android:textColorHint="#1F775A"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Senha"
                    android:textColorHint="#1F775A"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/atividadeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Atividade / Resíduo"
                    android:textColorHint="#1F775A"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/empresaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Empresa"
                    android:textColorHint="#1F775A"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/telefoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Telefone"
                    android:textColorHint="#1F775A"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_enviar"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FDFDFD"
                    android:fontFamily="@font/montserrat_semibold"
                    android:foregroundTint="#4CAF50"
                    android:shadowColor="#4CAF50"
                    android:text="Cadastrar"
                    android:textColor="#1F775A"
                    android:textColorLink="#FFFFFF"
                    android:textSize="16sp"
                    app:rippleColor="#E7EFE7" />

            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>