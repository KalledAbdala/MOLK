<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastrarResiduoActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewFundo"
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagem de fundo"
                app:srcCompat="@drawable/background_login_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Espaço no topo -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

                <EditText
                    android:id="@+id/tipo"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Tipo do resíduo"
                    android:textColorHint="#1F775A"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/descricao"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Descrição"
                    android:textColorHint="#1F775A"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Quantidade"
                    android:textColorHint="#1F775A"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/formaDeDescarte"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Forma de descarte"
                    android:textColorHint="#1F775A"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnSelecionarImagem"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FDFDFD"
                    android:fontFamily="@font/montserrat_semibold"
                    android:foregroundTint="#4CAF50"
                    android:text="Selecionar Imagem"
                    android:textColor="#1F775A"
                    android:textSize="16sp"
                    app:rippleColor="#E7EFE7" />

                <ImageView
                    android:id="@+id/imagemSelecionada"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagem selecionada"
                    android:background="@drawable/edittext_background" />

                <Button
                    android:id="@+id/btn_enviar_residuo"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#FDFDFD"
                    android:fontFamily="@font/montserrat_semibold"
                    android:foregroundTint="#4CAF50"
                    android:text="Cadastrar Resíduo"
                    android:textColor="#1F775A"
                    android:textSize="16sp"
                    app:rippleColor="#E7EFE7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
