<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="8dp"
    android:padding="16dp"
    android:backgroundTint="#F4F4F4"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeParceiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa parceira"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0AAE77"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/nomeResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do responsável: Fulano de Tal"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/emailResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: fulano@email.com"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/telefoneResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone: (11) 99999-9999"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <Button
            android:id="@+id/btnVerDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mais Informações"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#0AAE77"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
