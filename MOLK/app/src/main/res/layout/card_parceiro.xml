<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="6dp"
    android:radius="20dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/card_border_bg"> <!-- Adiciona um contorno opcional -->

        <TextView
            android:id="@+id/nomeParceiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa Parceira"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0AAE77"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnVerDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mais Informações"
            android:backgroundTint="#0AAE77"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
