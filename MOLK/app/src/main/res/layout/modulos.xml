<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModulosActivity">

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_cadastro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Introdução com 'Bem-vindo' e imagem genérica -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagem de usuário genérica -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user_placeholder"
            android:contentDescription="Imagem do usuário"
            android:layout_marginEnd="16dp"
            android:circleCrop="true" />

        <!-- Texto de boas-vindas -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-vindo, Fulano"
            android:textColor="#1A237E"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_semibold" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Módulos de Acesso"
        android:textColor="#1A237E"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        tools:ignore="NotSibling" />

    <!-- Grid com botões -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridModulos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:columnCount="1"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rowCount="4">

        <!-- Card: Resíduos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_residuos"
                android:contentDescription="Resíduos"
                app:tint="#1A237E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seus Resíduos"
                android:textColor="#1A237E"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Card: Entregas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_entregas"
                android:contentDescription="Entregas"
                app:tint="#1A237E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entregas"
                android:textColor="#1A237E"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Card: Parceiros -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_parceiros"
                android:contentDescription="Parceiros"
                app:tint="#1A237E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seus Parceiros"
                android:textColor="#1A237E"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Card: Dashboard -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_dashboard"
                android:contentDescription="Dashboard"
                app:tint="#1A237E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#1A237E"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
