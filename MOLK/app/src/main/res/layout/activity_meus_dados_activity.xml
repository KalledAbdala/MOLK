<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MeusDadosActivity">

    <!-- Navbar -->
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar_included"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <FrameLayout
        android:id="@+id/frameLayoutTitulo"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/bg_cilindro"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTituloDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="MEUS DADOS"
            android:textColor="#3EB48D"
            android:textSize="20sp" />
    </FrameLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#3EB48D"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutTitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollDashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutTitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card: Tipos de Resíduos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tiposResiduosTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipos dos Meus Resíduos"
                        android:textSize="18sp"
                        android:textColor="#3EB48D"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="12dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Status dos Resíduos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/statusResiduosTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status dos Meus Resíduos"
                        android:textSize="18sp"
                        android:textColor="#3EB48D"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="12dp" />

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Total de resíduos cadastrados -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/totalResiduosTitle"
                        android:text="Total dos Meus Resíduos Cadastrados"
                        android:textSize="18sp"
                        android:textColor="#3EB48D"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/totalResiduosText"
                        android:text="--"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#0AAE77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Empresas com Interesse nos Meus Resíduos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmpresas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/empresasInteresseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empresas com Interesse nos Meus Resíduos"
                        android:textSize="18sp"
                        android:textColor="#3EB48D"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="12dp" />

                    <!-- Cabeçalho da lista -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Empresa"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Interesse"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:gravity="end" />
                    </LinearLayout>

                    <!-- Linha divisória -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC"
                        android:layout_marginBottom="8dp" />

                    <!-- Loading indicator para empresas -->
                    <ProgressBar
                        android:id="@+id/loadingEmpresasInteresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminateTint="#3EB48D"
                        android:visibility="gone" />

                    <!-- Mensagem quando não há empresas -->
                    <TextView
                        android:id="@+id/txtSemEmpresas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nenhuma empresa demonstrou interesse nos seus resíduos."
                        android:textAlignment="center"
                        android:textColor="#666666"
                        android:padding="16dp"
                        android:visibility="gone" />

                    <!-- Container para a lista de empresas -->
                    <LinearLayout
                        android:id="@+id/containerEmpresas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- As empresas serão adicionadas aqui dinamicamente -->
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>