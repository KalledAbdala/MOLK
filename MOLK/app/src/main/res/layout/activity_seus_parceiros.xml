<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seusParceirosActivity">

    <!-- Navbar -->
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar_included"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título centralizado -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/bg_cilindro"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="SEUS PARCEIROS"
            android:textColor="#3EB48D"
            android:textSize="20sp" />
    </FrameLayout>

    <!-- Botão centralizado -->
    <Button
        android:id="@+id/btnAdicionarParceiros"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0AAE77"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="ADICIONAR PARCEIROS"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView que ocupa o espaço restante -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btnAdicionarParceiros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Conteúdo de exemplo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conteúdo dentro do scroll"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
